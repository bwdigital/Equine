{% extends '::base.html.twig' %}


{% block body -%}


    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <section>

                    <ul class="breadcrumb">
                        <li><a href="{{ path('delma_home') }}">Dashboard</a> <span class="divider">/</span></li>
                        <li><a href="{{ path('horse') }}">Horse</a> <span class="divider">/</span></li>
                        <li class="active">Edit Horse</li>
                    </ul>

                    <div class="row show-grid">
                        <div class="span6 offset3">

                            <h4>Horse - Edit</h4>

                            <form class="form-horizontal" action="{{ path('horse_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
                                <input type="hidden" name="_method" value="PUT" />

                                <div class="control-group">
                                    {{ form_errors(edit_form.name) }}
                                    <label class="control-label" for="">{{ form_label(edit_form.name, 'Horse Name' ) }}</label>
                                    <div class="controls">{{ form_widget(edit_form.name) }}</div>
                                </div>

                                <div class="control-group">
                                    {{ form_errors(edit_form.stable) }}
                                    <label class="control-label" for="">{{ form_label(edit_form.stable, 'Stable' ) }}</label>
                                    <div class="controls">{{ form_widget(edit_form.stable) }}</div>
                                </div>

                                <div class="control-group">
                                    {{ form_errors(edit_form.alternateName) }}
                                    <label class="control-label" for="">{{ form_label(edit_form.alternateName, 'Horse Nick Name' ) }}</label>
                                    <div class="controls">{{ form_widget(edit_form.alternateName) }}</div>
                                </div>

                                <div class="control-group">
                                    {{ form_errors(edit_form.owner) }}
                                    <label class="control-label" for="">{{ form_label(edit_form.owner, 'Horse Owner' ) }}</label>
                                    <div class="controls">{{ form_widget(edit_form.owner) }}</div>
                                </div>

                                <div class="control-group">
                                    {{ form_errors(edit_form.trainer) }}
                                    <label class="control-label" for="">{{ form_label(edit_form.trainer, 'Horse Trainer' ) }}</label>
                                    <div class="controls">{{ form_widget(edit_form.trainer) }}</div>
                                </div>

                                <div class="control-group">
                                    {{ form_errors(edit_form.breed) }}
                                    <label class="control-label" for="">{{ form_label(edit_form.breed, 'Horse Breed' ) }}</label>
                                    <div class="controls">{{ form_widget(edit_form.breed) }}</div>
                                </div>



                                <div class="control-group">
                                    {{ form_errors(edit_form.dob) }}
                                    <label class="control-label" for="">{{ form_label(edit_form.dob, 'DOB' ) }}</label>
                                    <div class="controls">{{ form_widget(edit_form.dob) }}</div>
                                </div>

                                <div class="control-group">
                                    {{ form_errors(edit_form.gender) }}
                                    <label class="control-label" for="">{{ form_label(edit_form.gender, 'Gender' ) }}</label>
                                    <div class="controls">{{ form_widget(edit_form.gender) }}</div>
                                </div>


                                <div class="control-group">
                                    {{ form_errors(edit_form.type) }}
                                    <label class="control-label" for="">{{ form_label(edit_form.type, 'Type' ) }}</label>
                                    <div class="controls">{{ form_widget(edit_form.type) }}</div>
                                </div>

                                <div class="control-group">
                                    {{ form_errors(edit_form.color) }}
                                    <label class="control-label" for="">{{ form_label(edit_form.color, 'color' ) }}</label>
                                    <div class="controls">{{ form_widget(edit_form.color) }}</div>
                                </div>

                                <div class="control-group">
                                    {{ form_errors(edit_form.sire) }}
                                    <label class="control-label" for="">{{ form_label(edit_form.sire, 'Sire' ) }}</label>
                                    <div class="controls">{{ form_widget(edit_form.sire) }}</div>
                                </div>

                                <div class="control-group">
                                    {{ form_errors(edit_form.dam) }}
                                    <label class="control-label" for="">{{ form_label(edit_form.dam, 'Dam' ) }}</label>
                                    <div class="controls">{{ form_widget(edit_form.dam) }}</div>
                                </div>


                                <div class="control-group">
                                    {{ form_errors(edit_form.code) }}
                                    <label class="control-label" for="">{{ form_label(edit_form.code, 'Code' ) }}</label>
                                    <div class="controls">{{ form_widget(edit_form.code) }}</div>
                                </div>

                                <div class="control-group">
                                    {{ form_errors(edit_form.status) }}
                                    <label class="control-label" for="">{{ form_label(edit_form.status, 'Status' ) }}</label>
                                    <div class="controls">{{ form_widget(edit_form.status) }}</div>
                                </div>

                                <div class="control-group">
                                    {{ form_errors(edit_form.country) }}
                                    <label class="control-label" for="">{{ form_label(edit_form.country, 'Country' ) }}</label>
                                    <div class="controls">{{ form_widget(edit_form.country) }}</div>
                                </div>

                                <div class="controls">
                                    <button class="btn btn-primary" name="submitButton" type="submit" value="Save" ><i class="icon-ok-sign icon-white"></i> Save</button>
                                    <button class="btn btn-primary"  name="submitButton" type="submit" value="Save & New" ><i class="icon-ok-sign icon-white"></i> Save & New</button>
                                    <button class="btn btn-warning" type="reset" value="Reset"><i class="icon-refresh icon-white"></i> Refresh</button>
                                </div>

                                <input type="hidden" name="_method" value="PUT" />

                                {{ form_row (edit_form._token) }}
                            </form>

                            <hr />
                            <div style="padding: 0 40px 20px;">
                                <div class="btn"><a href="{{ path('horse') }}"><i class="icon-arrow-left"></i> Back to the list</a></div>
                                <div class="pull-right">
                                    <form action="{{ path('horse_delete', { 'id': entity.id }) }}" method="post">
                                        <input type="hidden" name="_method" value="DELETE" />
                                        {{ form_widget(delete_form) }}
                                        <button class="btn btn-danger" type="submit"><i class="icon-trash icon-white"></i> Delete</button>
                                    </form></div>
                            </div>

                        </div>
                    </div>
                </section>
            </div><!--/span-->
        </div><!--/row-->
    </div><!--/.fluid-container-->
{% endblock %}
