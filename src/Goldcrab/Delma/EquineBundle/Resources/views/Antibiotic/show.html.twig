{% extends '::base.html.twig' %}

{% block body -%}

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <section>

                    <ul class="breadcrumb">
                        <li><a href="{{ path('delma_home') }}">Dashboard</a> <span class="divider">/</span></li>
                        <li><a href="{{ path('antibiotic') }}">Antibiotic</a> <span class="divider">/</span></li>
                        <li class="active">View</li>
                    </ul>

                    <div class="row show-grid">
                        <div class="span6 offset3">

                            <h4>Antibiotic - View</h4>

                            <table class="table table-bordered width-80">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ entity.id }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ entity.name }}</td>
                                </tr>
                                <tr>
                                    <th>Code</th>
                                    <td>{{ entity.code }}</td>
                                </tr>
                                </tbody>
                            </table>

                            <div  style="padding: 20px 0 0 50px;">
                                <a class="btn btn-primary" href="{{ path('antibiotic_edit', { 'id': entity.id }) }}"><i class="icon-edit icon-white"></i> Edit</a>
                            </div>

                            <hr />

                            <div style="padding: 0 40px 20px;">
                                <div class="btn"><a href="{{ path('antibiotic') }}"><i class="icon-arrow-left"></i> Back to the list</a></div>
                                <div class="pull-right">
                                    <form action="{{ path('antibiotic_delete', { 'id': entity.id }) }}" method="post">
                                        <input type="hidden" name="_method" value="DELETE" />
                                        {{ form_widget(delete_form) }}
                                        <button class="btn btn-danger" type="submit"><i class="icon-trash icon-white"></i> Delete</button>
                                    </form>
                                </div>
                            </div>

                        </div>
                </section>
            </div><!--/span-->
        </div><!--/row-->
    </div><!--/.fluid-container-->
{% endblock %}
