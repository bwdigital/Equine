{% extends '::base.html.twig' %}


{% block body -%}


    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <section>

                    <ul class="breadcrumb">
                        <li><a href="{{ path('delma_home') }}">Dashboard</a> <span class="divider">/</span></li>
                        <li><a href="{{ path('antibiotic') }}">Antibiotic</a> <span class="divider">/</span></li>
                        <li class="active">Edit Antibiotic</li>
                    </ul>

                    <div class="row show-grid">
                        <div class="span6 offset3">

                            <h4>antibiotic - Edit</h4>

                            <form class="form-horizontal" action="{{ path('antibiotic_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
                                <input type="hidden" name="_method" value="PUT" />

                                <div class="control-group">
                                    {{ form_errors(edit_form.name) }}
                                    <label class="control-label" for="">{{ form_label(edit_form.name, 'Antibiotic Name' ) }}</label>
                                    <div class="controls">{{ form_widget(edit_form.name) }}</div>
                                </div>

                                <div class="control-group">
                                    {{ form_errors(edit_form.code) }}
                                    <label class="control-label" for="">{{ form_label(edit_form.code, 'Antibiotic Code' ) }}</label>
                                    <div class="controls">{{ form_widget(edit_form.code) }}</div>
                                </div>

                                <div class="controls">
                                    <button class="btn btn-primary" type="submit" value="Save" ><i class="icon-ok-sign icon-white"></i> Save</button>
                                    <button class="btn btn-warning" type="reset" value="Reset"><i class="icon-refresh icon-white"></i> Refresh</button>
                                </div>

                                <input type="hidden" name="_method" value="PUT" />

                                {{ form_row (edit_form._token) }}
                            </form>

                            <hr />



                            <div style="padding: 0 40px 20px;">
                                <div class="btn"><a href="{{ path('antibiotic') }}"><i class="icon-arrow-left"></i> Back to the list</a></div>
                                <div class="pull-right">
                                    <form action="{{ path('antibiotic_delete', { 'id': entity.id }) }}" method="post">
                                        <input type="hidden" name="_method" value="DELETE" />
                                        {{ form_widget(delete_form) }}
                                        <button class="btn btn-danger" type="submit"><i class="icon-trash icon-white"></i>Delete</button>
                                    </form>

                                </div>
                            </div>

                        </div>
                    </div>
                </section>
            </div><!--/span-->
        </div><!--/row-->
    </div><!--/.fluid-container-->
{% endblock %}

