{% extends '::email.html.twig' %}

{% block body -%}

    <table width="700">
        <tbody>
        <tr>
            <td width="700" align="center" style="text-align: center;"><img src="http://192.150.10.123:2080/img/DEH-Logo.jpg" alt="DEH" style="padding:0px;" /></td>
        </tr>
        <tr>
            <td width="700" height="40" align="center" style="text-align: center; margin-bottom: 10px; font-size: 16px; font-weight: bold; text-decoration: underline;">LABORATORY REPORT</td>
        </tr>
        </tbody>
    </table>


    <table width="800">
        <tbody>
        <tr>
            <td style="width: 50px; font-weight: bold; padding-right: 20px; text-align: right;">Horse: </td>
            <td style="width: 350px;">{{ entity.horse.name }}</td>
            <td style="width: 50px; font-weight: bold; padding-right: 20px; text-align: right;">Date&nbsp;&nbsp;&nbsp;:</td>
            <td style="width: 350px;">{{ entity.testedDate|date('m-d-Y H:i:s') }}</td>
        </tr>
        <tr>
            <td style="width: 50px; font-weight: bold; padding-right: 20px; text-align: right;">Stable: </td>
            <td>{{ entity.horse.stable.name }}</td>
            <td style="width: 50px; font-weight: bold; padding-right: 20px; text-align: right;">Doctor:</td>
            <td>{{ entity.doctor.name }}</td>
        </tr>
        </tbody>
    </table>

    <h3>Bacteria Test Results</h3>

    <table width="700" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td bgcolor="#CCCCCC"><table width="700">
                    <tbody>
                    <tr>
                        <th width="120" bgcolor="#FFFFFF" style="padding: 2px 5px;">Sample Date</th>
                        <td width="175" bgcolor="#FFFFFF" style="padding: 2px 5px;">{{ entity.sampleDate|date('Y-m-d H:i:s') }}</td>
                        <th width="120" bgcolor="#FFFFFF" style="padding: 2px 5px;">Swab Source</th>
                        <td width="175" bgcolor="#FFFFFF" style="padding: 2px 5px;">{{ entity.swabSource }}</td>
                    </tr>
                    <tr>
                        <th width="120" bgcolor="#FFFFFF" style="padding: 2px 5px;">Gram Stain</th>
                        <td width="175" bgcolor="#FFFFFF" style="padding: 2px 5px;">{{ entity.gramStain }}</td>
                        <th width="120" bgcolor="#FFFFFF" style="padding: 2px 5px;">Bacteria Isolation</th>
                        <td width="175" bgcolor="#FFFFFF" style="padding: 2px 5px;">{{ entity.bacteriaIsolation }}</td>
                    </tr>
                    <tr>
                        <th width="120" bgcolor="#FFFFFF" style="padding: 2px 5px;">Fungi Isolation</th>
                        <td width="175" bgcolor="#FFFFFF" style="padding: 2px 5px;">{{ entity.fungiIsolation }}</td>
                        <th width="120" bgcolor="#FFFFFF" style="padding: 2px 5px;">&nbsp;</th>
                        <td width="175" bgcolor="#FFFFFF">&nbsp;</td>
                    </tr>
                    </tbody>
                </table></td>
        </tr>
    </table>

    <p style="padding-left: 50px; font-weight: bold;"> </p>

    <table width="700" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td bgcolor="#CCCCCC"><table width="700">
                    <tbody>
                    <tr>
                        <th width="300" bgcolor="#FFFFFF" style="padding: 2px 5px;">Antibiotics</th>
                        <th width="75" bgcolor="#FFFFFF" style="padding: 2px 5px;">Code</th>
                        <th width="35" bgcolor="#FFFFFF" style="padding: 2px 5px;">Test 1</th>
                        <th width="35" bgcolor="#FFFFFF" style="padding: 2px 5px;">Test 2</th>
                        <th width="35" bgcolor="#FFFFFF" style="padding: 2px 5px;">Test 3</th>
                        <th width="35" bgcolor="#FFFFFF" style="padding: 2px 5px;">Test 4</th>
                        <th width="35" bgcolor="#FFFFFF" style="padding: 2px 5px;">Test 5</th>
                    </tr>
                    {% for testValue in entity.testValues %}
                        <tr>
                            <td width="300" bgcolor="#FFFFFF" style="padding: 2px 5px;">{{ testValue.antibiotics}}</td>
                            <td width="75" align="center" bgcolor="#FFFFFF" style="padding: 2px 5px;">{{ testValue.code}}</td>
                            <td width="35" align="center" bgcolor="#FFFFFF" style="padding: 2px 5px;">{{ testValue.test1}}</td>
                            <td width="35" align="center" bgcolor="#FFFFFF" style="padding: 2px 5px;">{{ testValue.test2}}</td>
                            <td width="35" align="center" bgcolor="#FFFFFF" style="padding: 2px 5px;">{{ testValue.test3}}</td>
                            <td width="35" align="center" bgcolor="#FFFFFF" style="padding: 2px 5px;">{{ testValue.test4}}</td>
                            <td width="35" align="center" bgcolor="#FFFFFF" style="padding: 2px 5px;">{{ testValue.test5}}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table></td>
        </tr>
    </table>

    <p style="padding-left: 50px; font-weight: bold;"> </p>

    <p style="font-weight: bold;">Comments</p>
    <p>{{ entity.comments }}</p>

    <p style="padding: 5% 0 0 100px; font-size: 12px;">P O Box 9373, Dubai, UAE. Tel: 3366666, Fax: 3359575 | Lab Fax: 3366797</p>



{% endblock %}