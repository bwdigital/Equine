{% extends '::base.html.twig' %}

{% block body -%}

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <section>

                    <ul class="breadcrumb">
                        <ul class="breadcrumb">
                            <li><a href="{{ path('delma_home') }}">Dashboard</a> <span class="divider">/</span></li>
                            <li><a href="{{ path('stable') }}">Stable</a> <span class="divider">/</span></li>
                            <li class="active">Show</li>
                        </ul>
                    </ul>

                    <div class="row show-grid">
                        <div class="span6 offset3">

                            <h4>Stable - View</h4>

                            <table class="table table-bordered width-80">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ entity.id }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ entity.name }}</td>
                                </tr>
                                <tr>
                                    <th>Sgroup</th>
                                    <td>{{ entity.sgroup }}</td>
                                </tr>
                                <tr>
                                    <th>Phone</th>
                                    <td>{{ entity.phone }}</td>
                                </tr>
                                <tr>
                                    <th>Fax</th>
                                    <td>{{ entity.fax }}</td>
                                </tr>
                                <tr>
                                    <th>Address</th>
                                    <td>{{ entity.address }}</td>
                                </tr>
                                <tr>
                                    <th>City</th>
                                    <td>{{ entity.city }}</td>
                                </tr>
                                <tr>
                                    <th>Country</th>
                                    <td>{{ entity.country }}</td>
                                </tr>
                                </tbody>
                            </table>

                            <div  style="padding: 20px 0 0 50px;">

                                <a  class="btn btn-primary" href="{{ path('stable_edit', { 'id': entity.id }) }}"><i class="icon-edit icon-white"></i>
                                    Edit
                                </a>

                            </div>

                            <hr />
                            <div style="padding: 0 40px 20px;">
                                <div class="btn"><a href="{{ path('stable') }}">Back to the list</a></div>
                                <div class="pull-right">
                                    <form action="{{ path('stable_delete', { 'id': entity.id }) }}" method="post">
                                        <input type="hidden" name="_method" value="DELETE" />
                                        {{ form_widget(delete_form) }}
                                        <button class="btn btn-danger" type="submit"><i class="icon-trash icon-white"></i>Delete</button>
                                    </form>
                                </div>
                            </div>
                            <script language="javascript" type="text/javascript">
                                <!--
                                function printPopup(url) {
                                    newwindow=window.open(url,'bloodtest_'+{{ entity.id }},'height=600,width=800');
                                    if (window.focus) {
                                        newwindow.focus()
                                    }
                                    return false;
                                }

                                $()

                        </div>
                    </div>
                </section>
            </div><!--/span-->
        </div><!--/row-->
    </div><!--/.fluid-container-->
{% endblock %}
