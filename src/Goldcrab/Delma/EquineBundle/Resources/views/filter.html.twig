<form action="{{ path(app.request.attributes.get('_route')) }}" method="get"  class="well form-search">
    <div class="row-fluid" style="padding-bottom: 5px;">
        <div class="span2 right">Horse:</div>
        <div class="span4">{{ form_widget(filterForm.horse) }}</div>
        <div class="span2 right">Stable:</div>
        <div class="span4">{{ form_widget(filterForm.stable) }}</div>
    </div>

    <div class="row-fluid" style="padding-bottom: 5px;">
        <div class="span2 right">From:</div>
        <div class="span4">
            {{ form_widget(filterForm.testedFromDate) }}
        </div>
        <div class="span2 right">To:</div>
        <div class="span4">
            {{ form_widget(filterForm.testedToDate) }}
        </div>
    </div>

    {% if app.user.type != 'Doctor' %}
    <div class="row-fluid">
        <div class="span2 right">Doctor:</div>
        <div class="span4">{{ form_widget(filterForm.doctor) }}</div>
        <div class="span2 right">Tested By:</div>
        <div class="span4">{{ form_widget(filterForm.testedBy) }}</div>
    </div>
    {% else %}
        <div class="row-fluid">
            <div class="span2 right">Tested By:</div>
            <div class="span4">{{ form_widget(filterForm.testedBy) }}</div>
        </div>
    {% endif %}

    <div class="row-fluid">
        <div class="span2 right"></div>
        <div class="span4">
            {{ form_widget(filterForm.filter) }}
        </div>
    </div>
    {{ form_row (filterForm._token) }}
</form>
