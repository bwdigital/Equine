{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <div class="container">

        <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
        <h3 class="form-signin-heading">Please sign in</h3>

        {% if error %}
            <div>{{ error|trans }}</div>
        {% endif %}

        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input class="input-block-level" placeholder="Email address" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input class="input-block-level" placeholder="Password" type="password" id="password" name="_password" required="required" />

        <label class="checkbox">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </label>

        <input class="btn btn-small btn-primary"  type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </form>


    </div>

{% endblock body %}


